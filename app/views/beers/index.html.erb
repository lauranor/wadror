<p id="notice"><%= notice %></p>

<h1>Listing Beers</h1>


<table class="table table-hover">
  <thead>
  <tr>
    <th> <%= link_to 'Name', beers_path(order:"name") %> </th>
    <th> <%= link_to 'Style', styles_path(order:"style") %> </th>
    <th> <%= link_to 'Brewery', breweries_path(order:"brewery") %> </th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @beers.each do |beer| %>
      <% byebug if beer.brewery.nil? %>
      <tr>
        <td><%= beer.name %></td>
        <td><%= beer.style %></td>
        <td><%= link_to beer.brewery.name, brewery_path(beer) %></td>
        <td><%= link_to 'Show', beer, class:'btn btn-default btn-sm' %></td>
        <td><%= link_to 'Edit', edit_beer_path(beer), class:'btn btn-default btn-sm' %></td>
        <td><%= link_to 'Destroy', beer, class:'btn btn-danger btn-sm', method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>


<br>



